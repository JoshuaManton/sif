#include "core:basic.sif"

proc print(args: ..any) {
    for (var i = 0; i < args.count; i += 1) {
        var arg = args[i];
        if (arg.type == int) {
            print_int(cast(^int, arg.data)^);
        }
        else if (arg.type == float) {
            print_float(cast(^float, arg.data)^);
        }
        else if (arg.type == string) {
            print_string(cast(^string, arg.data)^);
        }
        else if (arg.type == bool) {
            print_bool(cast(^bool, arg.data)^);
        }
    }
}

proc main() : i32 {
    print(1, 12.4, "hello there\n");
    print("this ", "is ", "very ", "poggers");
}
